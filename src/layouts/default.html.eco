<!doctype html>
<html class="no-js" lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= @document.title %> | My Website</title>
  <%- @getBlock("meta").toHTML() %>
  <%- @getBlock("styles").toHTML() %>
  <%- @getBlock("styles").add(["/styles/z.css"]).toHTML() %>

	<%- @getBlock("scripts").add(["/bower_components/modernizr/modernizr.js"]).toHTML() %>
</head>
<body>
  <%- @getBlock("scripts").toHTML() %>

	<div class="row">
		<div class="large-12 columns">
		  <h1><%= @document.title %></h1>
		  <a href="/">Back home</a> 
		  <br><br>
		</div>
	</div>
	<div class="row">
		<div class="large-12 columns">
		  <%- @content %>
		</div>
	</div>

	<div class="row">
		<div class="large-12 columns">
			<h2>Recent News:</h2>
			<%- @partial('menu', {posttype:'news'}) %>
		</div>
	</div>

	<br><br><br><br>
	
	<div class="row">
		<div class="large-6 small-12 columns">
	  	<p>Made with <a href="http://docpad.org/docs/begin#adding-assets" target="_blank">DocPad</a></p>
		</div>
		<div class="large-6 small-12 columns">
	  	<p>Supported with <a href="https://pages.github.com/" target="_blank">GitHub Pages</a></p>
		</div>
	</div>

	<%- @getBlock("scripts").add([]).toHTML() %>
	<%- @getBlock('scripts').add(@site.scripts).toHTML() %>
</body>
</html>